---
import SetupListItem from '../../components/SetupListItem.astro';
import SimplePageHeader from '../../components/SimplePageHeader.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllSetups } from '../../lib/setup';

const setups = await getAllSetups();
---

<BaseLayout
  title='Setup - rmsurv.com'
  description={'Detailed setups on Software Engineering Topics'}
  permalink={`/setups`}
>
  <SimplePageHeader title='Setups' description='Setups.' />

  <div class='pb-20 pt-2 bg-gray-50'>
    <div class='container'>
      <div class='mt-3 sm:my-5'>
        {setups.map((setup) => <SetupListItem setup={setup} />)}
      </div>
    </div>
  </div>
</BaseLayout>
